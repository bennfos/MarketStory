@model BackendCapstone.Models.ClientPage

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this Client Page?</h3>
<div>
   
    <hr />
    <div style="display: flex; margin: 30px; width:1000px; height:315px; background-color:#FAFAFA; border-radius:3px;">
        <div style="margin: 0 15px 0 0;">
            <img style="width:300px; height:315px;" asp-append-version="true" src="~/images/@Model.ImgPath" />
        </div>
        <div style="margin:15px 0 0 0;">

            <h5>
                @Html.DisplayFor(modelItem => Model.Name)
            </h5>
            <hr />
            <p>
                @Html.DisplayFor(modelItem => Model.Description)
            </p>
            <hr />

            <div style="display:flex; flex-direction:row;">
                @foreach (var item in Model.Users)
                {
                    <div style="margin:10px 10px 10px 10px;">
                        <a asp-controller="ApplicationUsers" asp-action="MarketingUserDetails" asp-route-id="@item.Id">
                            <div style="display: flex; flex-direction: column; justify-content: center;">
                                <img style="width:70px; height: 70px; border-radius: 50%;" src="~/images/@item.ImgPath" asp-append-version="true" />
                                <p>@item.FirstName @item.LastName</p>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>

    </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a href="javascript:history.go(-1)">Back to Previous Page</a>
    </form>

</div>